{
  "extends": "@theintern-dev/tsconfig",
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "module": "umd",
    "outDir": "./dist",
    "resolveJsonModule": false,
    "rootDir": "src"
  },
  "references": [{ "path": "../common" }],
  "include": [
    "src/index.ts",
    "src/bin/*.ts",
    "src/loaders/*.ts",
    "src/tasks/*.ts",

    // Build everything in lib (vs just relying on the bin entry point) so
    // it'll be available for testing
    "src/lib/**/*.ts"
  ]
}
