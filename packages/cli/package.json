{
  "name": "@theintern/cli",
  "version": "1.0.0-pre",
  "description": "The command line interface for Intern",
  "repository": {
    "type": "git",
    "url": "https://github.com/theintern/cli.git"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "chokidar": "~1.7.0",
    "commander": "~2.11.0",
    "glob": "~7.1.2",
    "opn": "~5.1.0",
    "resolve": "~1.4.0",
    "semver": "~5.4.1"
  },
  "bugs": "https://github.com/theintern/cli/issues",
  "keywords": [
    "javascript",
    "test",
    "unit",
    "testing",
    "intern"
  ],
  "homepage": "http://theintern.io/",
  "preferGlobal": true,
  "bin": {
    "intern": "./bin/intern.js"
