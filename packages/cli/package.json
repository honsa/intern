    "lint": "intern-dev-lint",
    "release": "intern-dev-release",
    "watch": "intern-dev-build watch"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@theintern/dev": "~0.5.7",
    "@types/chokidar": "~1.7.2",
    "@types/commander": "~2.3.31",
    "@types/glob": "~5.0.32",
    "@types/opn": "~3.0.28",
    "@types/resolve": "0.0.4",
    "@types/semver": "~5.3.30",
    "intern": "~4.0.0-alpha.16"
