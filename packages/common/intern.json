{
  "browser": {
    "suites": "_tests/unit.js"
  },
  "node": {
    "suites": "tests/**/*.ts",
    "reporters": {
      "name": "runner",
      "options": { "hideSkipped": true, "hidePassed": "." }
    },
    "tsconfig": "tests/tsconfig.json"
  },
  "configs": {
    "wd": {
      "description": "Run tests in Chrome using Selenium",
      "tunnel": "selenium",
      "environments": [{ "browserName": "node" }, { "browserName": "chrome" }],
      "tunnelOptions": {
        "drivers": [{ "name": "chrome", "version": "83.0.4103.39" }]
      }
    },

    "chrome": {
      "extends": "wd",
      "environments": "chrome"
    },

    "firefox": {
      "extends": "wd",
      "environments": "firefox"
    },

    "safari": {
      "extends": "wd",
      "environments": "safari"
    },

    "edge": {
      "extends": "wd",
      "environments": {
        "browserName": "MicrosoftEdge",
        "browserVersion": "insider preview"
      }
    }
  }
}
