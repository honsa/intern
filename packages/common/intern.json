{
  "browser": {
    "suites": "_tests/unit.js"
  },
  "node": {
    "suites": "tests/**/*.ts",
    "reporters": {
      "name": "runner",
      "options": { "hideSkipped": true, "hidePassed": false }
    },
    "tsconfig": "tests/tsconfig.json"
  },
  "configs": {
    "wd": {
      "description": "Run tests in Chrome using Selenium",
      "tunnel": "selenium",
      "environments": [
        { "browserName": "node" },
        {
          "browserName": "chrome",
          "fixSessionCapabilities": "no-detect"
        }
      ],
      "tunnelOptions": {
        "drivers": [{ "name": "chrome", "version": "83.0.4103.39" }]
      }
    }
  }
}
